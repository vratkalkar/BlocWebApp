<%= form_for([@topic, @post, @post.comments.build]) do |f| %>
 <div class="row">
   <%= f.hidden_field :post_id, value: @post.id %>
   <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter comment here" %>
  </div>
</br>
  <div class="media-body">
    <%= f.submit "Comment", class: "btn btn-success" %>
  </div>
<% end %>
