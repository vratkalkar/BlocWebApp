<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% if policy(@topics).update? %>
      <%= link_to "New Topic", new_topic_path, class:'btn btn-success' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topics| %>
     <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topics.name, topics %>
        </h4>
        <% end %>
      </div>
    </div>
  </div>
</div>