<h1>Topics</h1>

<div class="row">
  <div class="span8">
    <% @topics.each do |topics| %>
     <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topics.name, topics %>
        </h4>
        <small>
          <%= topics.description %>
        </small>
      </div>
    </div>
    <% end %>
   </div>
   <div class="span4">
    <% if can? :create, Topic %>
       <%= link_to "New Topic", new_topic_path, class: 'btn btn-large btn-block' %>
       <% end %>
      </div>
    </div>
