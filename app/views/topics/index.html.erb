<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% if policy(@topic).update? %>
      <%= link_to "New Topic", new_topic_path, class:'btn btn-success' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <% @topic.each do |topic| %>
     <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topic.name, topic %>
        </h4>
        <% end %>
        <%= will_paginate @topic %>
      </div>
    </div>
  </div>
</div>