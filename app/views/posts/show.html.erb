<h1><%= markdown @posts.title %></h1>

<div class="row">
  <div class="span8">
    <p><%= markdown @posts.body %></p>
  </div>
  <div class="span4">
    <% if can? :edit, @post %>
     <%= link_to "Edit", edit_topic_post+ath(@topics,@posts), class: 'btn btn-large btn-block' %>
     <% end %>
   </div>
 </div>