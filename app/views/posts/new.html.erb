<h1>New Post</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for new posts:</p>
    <ul>
      <li>Add a title</li>
      <li>Add your name</li>
      <li>Add any sources</li>
      <li>Add paragraphs</li>
    </ul>
  </div>
  <div class="col-md-8">
     <%= form_for [@topic, @post] do |f| %>
     <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, class: 'form-control', placeholder: "Enter post name" %>
      </div>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post description" %>
      </div>
     <div>
       <%= f.submit "Save", class: 'btn btn-success' %>
      <% end %>
    </div>
  

   
  
